<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/otp_verify_layout"
    tools:context="com.kbc.playAlong.activity.Otp_Verify">

    <ImageView
        android:id="@+id/contact_back"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_baseline_west_24"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_4sdp"
        android:background="@drawable/arrow_bg"/>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/otp_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:text="Contact Us"
            android:textStyle="bold"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_17sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/edit_profile"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/_200sdp"
                        android:src="@drawable/kbc_logo_play_store"
                        android:layout_gravity="right"
                        android:padding="@dimen/_20sdp"/>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_margin="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KBC SUPPORT TEAM"
                            android:textColor="@color/black"
                            android:padding="@dimen/_5sdp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_15sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address: Andhere East Sandesh Nagar, Sakinaka, Mumbai, Maharashtra 400099."
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginStart="@dimen/_10sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact Number: +919589350256"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:padding="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_10sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email: kbconlinecontest@gmail.com"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:padding="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edite_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Enter Your Name"
                                android:textSize="@dimen/_15sdp"
                                android:background="@null"
                                android:editable="false"
                                android:focusable="false"
                                android:clickable="false"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:inputType="textPersonName" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edite_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Enter Your email"
                                android:textSize="@dimen/_15sdp"
                                android:background="@null"
                                android:editable="false"
                                android:focusable="false"
                                android:clickable="false"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:inputType="textEmailAddress" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edite_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Enter Your phone number"
                                android:textSize="@dimen/_15sdp"
                                android:background="@null"
                                android:editable="false"
                                android:focusable="false"
                                android:clickable="false"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:inputType="textEmailAddress" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edit_user_address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Enter your quiery"
                                android:textSize="@dimen/_14sdp"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:gravity="top"
                                android:lineSpacingExtra="@dimen/_3sdp"
                                android:maxLines="10"
                                android:scrollbars="vertical"
                                android:padding="@dimen/_10sdp"
                                android:inputType="textMultiLine" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:elevation="@dimen/_10sdp"
                    android:layout_margin="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/btn_submit"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:text="Submite"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:background="@drawable/login_bg"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>